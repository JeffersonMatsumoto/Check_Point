@using Check_Point.Models;
@using Check_Point.Controllers;
@using Check_Point.Repositorios; 
@using Microsoft.AspNetCore.Http

@{
    ViewBag.Title = "Cadastrar Usuário";
    Layout = "MasterPageDeslogado";
}
<button id="myBtn" class="btn-cadastrar">Cadastre-se agora no Check Point, é totalmente <b>GRATUITO</b></button>
